<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:name=".HostApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CommerceSDKDemoApp"
        tools:targetApi="31" >
        <activity
            android:name=".shoppablevideos.SingleShoppableVideoActivity"
            android:exported="false"
            android:theme="@style/Theme.CommerceSDKDemoApp"/>
        <activity
            android:name=".LiveActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            android:supportsPictureInPicture="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CommerceSDKDemoApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".shoppablevideos.ShoppableVideosContainerActivity"
            android:exported="false"/>
        <activity android:name=".shoppablevideos.PlaylistShoppableVideoActivity"
            android:exported="false"/>
        <activity android:name=".shoppablevideos.SKUShoppableVideoActivity"
            android:exported="false"/>
    </application>

</manifest>